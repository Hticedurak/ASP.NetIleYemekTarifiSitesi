@using WebApplication1.Models.Sınıflar
@model List<Anasayfa>
@{
    ViewBag.Title = "YemekDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<html>
<body>
    <div class="container">
        @foreach (var x in Model)
        {
        <div class="jumbotron">
            <h2>@x.Baslik</h2>
        </div>
        <div class="taslak">
            <img class="foto1" src="@x.Foto" />
            <div class="malzemeler">Malzemeler:</div>
            <div class=" malzemeler1">
              @x.Malzemeler
            </div> <hr />
            <div class=" yapilis">Yapılışı: </div>
            <div class=" tarif">
                @x.Tarif
            </div>
        </div>
        }
    </div>
</body>
</html>


