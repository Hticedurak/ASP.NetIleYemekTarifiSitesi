@using WebApplication1.Models.Sınıflar
@model List<Anasayfa>
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<html>
<body>
    <div class="container">
        <div class="content2">
            <div class="jumbotron">
                <h2> Beş Çayı'na Hoşgeldiniz:)</h2>
            </div>

            <div class="row"> 
                @foreach(var x in Model) {
                <div class="card col-sm-4 col-lg-4 p-4">
                    <div class=" card-header ">@x.Baslik</div>
                    <div class=" card-body  ">
                        <img src="@x.Foto" />
                        <div class="card-footer ">
                            <button onclick="document.location = '/Anasayfa/YemekDetay/@x.ID'">  Tarifi için tıklayınız. </button>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</body>
</html>


